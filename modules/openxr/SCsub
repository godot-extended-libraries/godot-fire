Import('env')

# First, create a custom env for the shared library.
module_env = env.Clone()

# Add library includes
module_env.Append(CPPPATH=[
    "openxr_loader_windows/1.0.12/include/",
    "src",
    ]) # this is a relative path

module_env.add_source_files(env.modules_sources, "*.cpp")
module_env.add_source_files(env.modules_sources, "src/*.cpp")
module_env.add_source_files(env.modules_sources, "src/*/*.cpp")
module_env.add_source_files(env.modules_sources, "src/*/*/*.cpp")

platform_string = ''
extension_string = ''

if (env['platform'] == 'windows'):
    platform_string = 'x64'
    extension_string = '.lib'
elif (env['platform'] == 'darwin'):
    platform_string = 'osx32'
    extension_string = '.dylib'
elif (env['platform'] == "x11"):
    platform_string = 'linux'
    extension_string = '.so'

library_location = 'openxr_loader_windows/1.0.12/' + platform_string + '/lib/openxr_loader' + extension_string

env.Append(LIBS=[File(library_location)])